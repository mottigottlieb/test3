<div class="container">
         <div class="row">
            <div class="col-lg-8 col-lg-push-2 vertical-center text-center test  jumbotron">
                  <!-- Default panel contents -->
                   <h1 class="fancy-text">Welcome <%=@user.first_name.capitalize%></h1>
                   <p></p>
                <div class="col-lg-4 red">
               <div class="panel panel-default">
                  <div class="panel-heading"><b>Pets:</b></div>
                  <table class="table">
                     <thead>
                        <tr>
                           <th>
                              #
                           </th>
                           <th>
                              Name
                           </th>
                        </tr>
                     </thead>
                       <% @id=0 %>
                       <% @user.pets.each do |pet| %>
                       <% @id += 1 %>
                     <tbody>
                        <tr>
                           <td>
                              <%= @id %>
                           </td>
                           <td>
                             <a href= "/pet/<%=pet.id%>"><%= pet.name %> <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
                           </td>
                           <%end%>
                        </tr>
                     </tbody>
                  </table>
               </div>
            </div>
                <div class="col-lg-7">
               <div class="panel panel-default">
                  <div class="panel-heading">
                     <h3 class="panel-title"><b>Account Stats:</b></h3>
                  </div>
                  <div class="panel-body">
                     <ul class="pull-left text-left">
                        <li><b>Username:</b> <%=@user.username%></li>
                        <li><b>First Name:</b><%=@user.first_name%></li>
                        <li><b>Last Name:</b><%=@user.last_name%></li>
                        <li><b>City:</b><%=@user.last_name%></li>
                        <li><b>State: </b><%=@user.state%></li>
                     </ul>
                  </div>
               </div>
            <!-- Button (Double) -->
           <div class="form-group">
               <div class="col-md-4 text-center">
                  <form method="get" action="/adopt">
                     <input type="submit" class="btn btn-default" value="Adopt A Pet">
                  </form>
               </div>
            </div>

                   <div class="form-group">
               <div class="col-md-4 text-center">
                  <form method="get" action="/pets/new">
                     <input type="submit" class="btn btn-default" value="List a new Pet">
                  </form>
               </div>
            </div>

      <div class="form-group">
               <div class="col-md-4 text-center">
                  <form method="get" action="/logout">
                     <input type="submit" class="btn btn-default" value="Logout">
                  </form>
               </div>
            </div>


      </div>
               </div>

         </div>
         <!-- /.row -->
      </div>
